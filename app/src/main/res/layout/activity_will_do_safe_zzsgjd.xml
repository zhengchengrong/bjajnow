        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="施工单位近一年内是否发生安全生产事故情况"
            android:textSize="@dimen/sp_admin_main_03"

            />
