<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto">
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_admin_main"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/admin_main_tl_bg"
        tl:tl_textAllCaps="true"
        tl:tl_indicator_color="@color/main_color"
        tl:tl_textUnselectColor="@color/main_text_color"
        tl:tl_textSelectColor="@color/admin_main_select_text"
        tl:tl_textsize="14sp">
    </com.flyco.tablayout.SlidingTabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/tl_admin_main" />

    <RelativeLayout
        android:id="@+id/rl_admin_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/shape_admin_main_color"
        >
        <ImageView
            android:id="@+id/iv_flag01"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/admin_main_light_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />
    <TextView
        android:id="@+id/tv_admin_main_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_bottom_text"
        android:layout_toRightOf="@+id/iv_flag01"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_admin_main_05"
        android:layout_marginRight="@dimen/dp_15"
        android:textColor="@color/main_text_color"
        android:paddingLeft="@dimen/dp_6"
        android:paddingRight="@dimen/dp_6"
        />
        <ImageView
            android:id="@+id/iv_flag02"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@drawable/delet"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_2"
            />
    </RelativeLayout>

</RelativeLayout>