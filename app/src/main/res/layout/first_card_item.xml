<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:drawableLeft="@drawable/down"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:drawablePadding="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        />
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:layout_below="@+id/tv_title"
    app:cardBackgroundColor="@color/first_card_item_bg"
    app:cardCornerRadius="@dimen/dp_5"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_5"
    >
<LinearLayout
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_bule"
        android:layout_weight="1.5">
        <TextView
            android:id="@+id/tv_num01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="1865项"
            android:textSize="@dimen/sp_14"

            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="监督工程"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/white"
            />
    </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_num02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="1865项"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/first_card_tv"
                android:layout_marginTop="@dimen/dp_5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="监督工程"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/first_card_tv2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_num03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="1865项"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/first_card_tv"
                android:layout_marginTop="@dimen/dp_5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="监督工程"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/first_card_tv2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_num04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="1865项"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/first_card_tv"
                android:layout_marginTop="@dimen/dp_5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="监督工程"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_2"

                android:textColor="@color/first_card_tv2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_num05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_vertical|center_horizontal"
                android:text="1865项"
                android:textColor="@color/first_card_tv"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="监督工程"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/first_card_tv2"
                />
        </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>