<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/garybg"
    android:orientation="vertical">

    <include layout="@layout/layout_top_white" />

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/tl_4"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        tl:tl_bar_color="#ffffff"
        tl:tl_indicator_color="#00B2A8"
        tl:tl_indicator_corner_radius="4dp"
        tl:tl_tab_padding="25dp"
        tl:tl_textsize="15dp" />

    <include layout="@layout/layout_menu_line"/>
    <FrameLayout
        android:id="@+id/fl_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
