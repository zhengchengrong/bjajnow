<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/tv_project_item01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_admin_main_04"
        android:textColor="@color/admin_main_select_text"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:paddingTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/tv_project_item02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        android:text="@string/check"
        android:background="@drawable/shape_main_color_select"
        android:textColor="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/light_gray"
        android:layout_below="@+id/tv_project_item01"
        android:layout_marginTop="@dimen/dp_5"
        />
</RelativeLayout>