<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:fillViewport="false"
        tl:tl_indicator_color="@color/green"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_margin_top="5dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/black"
        tl:tl_textUnselectColor="@color/lightblack"
        tl:tl_textsize="18dp"
        tl:tl_underline_color="@android:color/transparent"
        tl:tl_underline_height="1dp" />

    <include layout="@layout/layout_menu_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
